install:
	@echo "ðŸ“¦ Installiere AbhÃ¤ngigkeiten..."
	cd frontend && npm install
	cd backend && go mod download
	@echo "âœ… Fertig!"

dev:
	@echo "ðŸš€ Starte Dev Mode..."
	wails dev

build:
	@echo "ðŸ”¨ Baue Production Binary..."
	cd frontend && npm run build
	wails build -clean
	@echo "âœ… Build fertig! Binary: ./build/bin/jarvis-desktop"

clean:
	@echo "ðŸ§¹ RÃ¤ume auf..."
	rm -rf build/
	rm -rf frontend/dist/
	@echo "âœ… Fertig!"

build-windows:
	wails build -clean -platform windows/amd64

build-linux:
	wails build -clean -platform linux/amd64

build-macos:
	wails build -clean -platform darwin/universal
