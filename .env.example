# ============================================================
# JARVIS CORE CONFIGURATION
# ============================================================
# Copy this file to .env and customize as needed
# See: https://github.com/Lautloserspieler/JarvisCore/blob/main/README.md

# ============================================================
# SYSTEM CONFIGURATION
# ============================================================

# Backend API Port (default: 5050)
JARVIS_BACKEND_PORT=5050

# Frontend UI Port (default: 5000)
JARVIS_FRONTEND_PORT=5000

# Runtime Mode: development | production | desktop
JARVIS_MODE=development

# Log Level: DEBUG | INFO | WARNING | ERROR | CRITICAL
JARVIS_LOG_LEVEL=INFO

# Auto-install dependencies on startup
JARVIS_AUTO_INSTALL=false

# ============================================================
# LLM CONFIGURATION
# ============================================================

# Default LLM Model: llama32-3b | llama32-1b | qwen25-3b
LLM_DEFAULT_MODEL=llama32-3b

# Context Window Size (tokens)
LLM_CONTEXT_SIZE=8192

# GPU Layers: -1 (auto), 0 (CPU only), >0 (specific layers)
LLM_GPU_LAYERS=-1

# Device: cuda | cpu | mps (Mac)
LLM_DEVICE=cuda

# Temperature for generation (0.0-2.0)
LLM_TEMPERATURE=0.7

# Max tokens to generate
LLM_MAX_TOKENS=2048

# LLM Cache: max cached models
LLM_MAX_CACHED_MODELS=2

# LLM Cache: time-to-live (seconds)
LLM_CACHE_TTL=300

# ============================================================
# TEXT-TO-SPEECH (TTS) CONFIGURATION
# ============================================================

# TTS Engine: xtts | pyttsx3
TTS_ENGINE=xtts

# TTS Device: cuda | cpu
TTS_DEVICE=cuda

# TTS Language: de | en
TTS_LANGUAGE=de

# TTS Enabled by default
TTS_ENABLED=true

# TTS Volume (0.0-1.0)
TTS_VOLUME=1.0

# XTTS model override
JARVIS_XTTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2

# XTTS default speaker
# JARVIS_XTTS_DEFAULT_SPEAKER=your_speaker_name

# ============================================================
# SPEECH RECOGNITION (STT) CONFIGURATION
# ============================================================

# STT Engine: faster-whisper | whisper
STT_ENGINE=faster-whisper

# STT Model: tiny | base | small | medium | large
STT_MODEL=base

# STT Language: de | en | auto
STT_LANGUAGE=de

# STT Device: cuda | cpu
STT_DEVICE=cuda

# ============================================================
# PLUGIN API KEYS
# ============================================================
# Get API keys from:
# - OpenWeather: https://openweathermap.org/api
# - News API: https://newsapi.org/

# Weather Plugin (OpenWeatherMap)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# News Plugin (NewsAPI)
NEWS_API_KEY=your_news_api_key_here

# Google Plugin
GOOGLE_API_KEY=your_google_api_key_here

# DeepL Plugin
DEEPL_API_KEY=your_deepl_api_key_here

# Default Location for Weather
WEATHER_DEFAULT_CITY=Wiesbaden
WEATHER_DEFAULT_COUNTRY=DE

# ============================================================
# FEATURE FLAGS
# ============================================================

# Enable voice control (microphone input)
ENABLE_VOICE_CONTROL=true

# Enable desktop notifications
ENABLE_DESKTOP_NOTIFICATIONS=true

# Enable system tray icon
ENABLE_SYSTEM_TRAY=true

# Enable telemetry (anonymized usage statistics)
ENABLE_TELEMETRY=false

# Enable plugin hot-reload
ENABLE_PLUGIN_HOTRELOAD=true

# Enable debug mode (more verbose logging)
DEBUG=false

# ============================================================
# HUGGING FACE CONFIGURATION
# ============================================================
# Optional: For downloading gated models
# Get token from: https://huggingface.co/settings/tokens

# HF_TOKEN=your_huggingface_token_here

# ============================================================
# DATABASE CONFIGURATION (Future)
# ============================================================
# Future: For persistent storage

# DATABASE_URL=sqlite:///data/jarvis.db
# DATABASE_POOL_SIZE=5

# ============================================================
# SECURITY CONFIGURATION (Future)
# ============================================================
# Future: For authentication & encryption

# SECRET_KEY=your_secret_key_here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_MINUTES=60

# ============================================================
# ADVANCED CONFIGURATION
# ============================================================

# WebSocket ping interval (seconds)
WS_PING_INTERVAL=30

# WebSocket timeout (seconds)
WS_TIMEOUT=300

# Max concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout (seconds)
REQUEST_TIMEOUT=60

# Enable CORS (for development)
ENABLE_CORS=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5000,http://localhost:3000
